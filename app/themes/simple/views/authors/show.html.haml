.container
  .row
    .col-md-12
      .author-info.m-b-3
        .container
          .row
            .col-md-3
              .author-info-img
                - if @author.profile_image_id?
                  = attachment_image_tag @author, :profile_image, :fill, 300, 300, format: "jpg", class: '', alt: "profile picture", title: @author.name
            .col-md-3.text-xs-center
              .author-info-name= @author.name
              -# .author-info-position.m-t-1.m-b-1 Author, La Poign√©e de Main
              .author-info-social
                %i.fa.fa-linkedin
                %i.fa.fa-twitter
                %i.fa.fa-pinterest
            .col-md-6
              .author-info-blurb
                = @author.biography.try(:html_safe)
= render 'posts/posts'
