- content_for :title do
  Change your password

= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|

  = devise_error_messages! 
  
  = f.hidden_field :reset_password_token
  
  = f.password_field :password, autofocus: true, autocomplete: "off", help: "(#{@minimum_password_length} characters minimum)"
  
  
  = f.password_field :password_confirmation, autofocus: true, autocomplete: "off", label: "Confirm new password", class: "required"

  = f.primary "Send me reset password instructions"

  %hr

  = render "devise/shared/links"
