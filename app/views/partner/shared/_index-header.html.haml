/ views/partner/shared/_index_header.html.haml

- unless @business.nil?
  %ol.breadcrumb
    %li.active
      = @business.decorate.name

= link_to send("new_partner_#{relation}_path"), 
  class: 'btn btn-primary pull-right', 
  role: 'button', 
  title: th('activerecord.actions.new') do
  = i 'plus'
  = t 'activerecord.actions.new'
  
%h1
  = i Partner::Request.decorator_class.icon
  = tmp "partner/#{relation}"

%p= t "descriptions.partner/#{relation.pluralize}"