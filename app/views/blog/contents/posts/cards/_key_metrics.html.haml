        = i @post.attribute_icon(:words_count)
        = @post.words_count
        = han('blog/contents/post', :words_count, count: @post.words_count).humanize
      %li.list-group-item
        = i @post.attribute_icon(:anchors_count)
        = @post.anchors_count
        = han('blog/contents/post', :anchors_count, count: @post.anchors_count).humanize